{{!-- <h1>Burger Time!</h1> --}}

<h2>Burgers being Smashed on!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<br>
<br>

<h3>Add a Burger</h3>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour"></label><br>
    <input type="radio" name="devour" value="1" checked> Smash<br>
    <input type="radio" name="devour" value="0"> No Smash
  </div>

  <button type="submit">Add Burger</button>
</form>

<br>
<br>


<h2>Burgers not eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
